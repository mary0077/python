def detectar_emocao(frase):
    palavras_alegria = {"feliz", "alegre", "contente", "animado", "maravilhoso", "Ã³timo"}
    palavras_tristeza = {"triste", "deprimido", "desanimado", "infeliz", "chateado"}
    palavras_raiva = {"raiva", "irritado", "furioso", "nervoso", "bravo"}
    palavras_medo = {"medo", "assustado", "aterrorizado", "nervoso", "ansioso"}

    contadores = {"alegria": 0, "tristeza": 0, "raiva": 0, "medo": 0}

    frase = frase.lower().replace(",", "").replace(".", "")
    palavras = frase.split()

    for palavra in palavras:
        if palavra in palavras_alegria:
            contadores["alegria"] += 1
        elif palavra in palavras_tristeza:
            contadores["tristeza"] += 1
        elif palavra in palavras_raiva:
            contadores["raiva"] += 1
        elif palavra in palavras_medo:
            contadores["medo"] += 1

    if all(valor == 0 for valor in contadores.values()):
        print("ðŸ¤” Nenhuma emoÃ§Ã£o detectada.")
    else:
        emocao_predominante = max(contadores, key=contadores.get)
        emojis = {
            "alegria": "ðŸ˜Š",
            "tristeza": "ðŸ˜¢",
            "raiva": "ðŸ˜ ",
            "medo": "ðŸ˜¨"
        }
        print(f"{emojis[emocao_predominante]} EmoÃ§Ã£o predominante: {emocao_predominante}")


# Teste
entrada = input("Digite uma frase para analisar a emoÃ§Ã£o: ")
detectar_emocao(entrada)
